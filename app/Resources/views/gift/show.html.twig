{% extends 'base.html.twig' %}

{% block body %}

    <div class="container-fluid">

        <h1>Cadeau</h1>

        <table>
            <tbody>
            <tr>
                <th>ID</th>
                <td>{{ gift.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ gift.giftName }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ gift.giftPictureUrl }}" alt="gift pic" class="gift-pic"></td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ gift.giftDescription }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ gift.giftPrice }}</td>
            </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('gift_index') }}" class="btn btn-info">Retour Ã  la liste</a>
            </li>
            <li>
                <a href="{{ path('gift_edit', { 'id': gift.id }) }}" class="btn btn-warning">Modifier</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger">
                {{ form_end(delete_form) }}
            </li>
        </ul>

    </div>

{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('yesTouch/css/main.css') }}">
