{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.16/datatables.min.css"/>
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
{% endblock %}

{% block body %}
    <h1>Gifts list</h1>

    <table id="gift" class="display" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Giftname</th>
                <th>Giftpictureurl</th>
                <th>Giftdescription</th>
                <th>Giftprice</th>
                <th>Giftcat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for gift in gifts %}
            <tr>
                <td><a href="{{ path('gift_show', { 'id': gift.id }) }}">{{ gift.id }}</a></td>
                <td>{{ gift.giftName }}</td>
                <td><img src="{{ gift.giftPictureUrl }}" width="300px"></td>
                <td>{{ gift.giftDescription }}</td>
                <td>{{ gift.giftPrice }}</td>
                <td>{{ gift.giftCat }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('gift_show', { 'id': gift.id }) }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> show</a>
                        </li>
                        <li>
                            <a href="{{ path('gift_edit', { 'id': gift.id }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> edit</a>
                        </li>

                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('gift_new') }}"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Create a new gift</a>
        </li>
    </ul>
{% endblock %}

{% block javascripts %}
    <script
            src="https://code.jquery.com/jquery-3.2.1.min.js"
            integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
            crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.16/datatables.min.js"></script>
    <script>
        $(document).ready(function(){
            $('#gift').DataTable();
        });

    </script>

{% endblock %}