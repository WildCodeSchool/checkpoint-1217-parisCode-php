{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('public/css/giftstyle.css') }}" />
{% endblock %}

{% block body %}
    <h1>Liste de cadeaux</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom du cadeau</th>
                <th>Pour te donner une idée...</th>
                <th>Un peu plus de détails</th>
                <th>Prix estimé</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for gift in gifts %}
            <tr>
                <td><a href="{{ path('gift_show', { 'id': gift.id }) }}">{{ gift.id }}</a></td>
                <td>{{ gift.giftName }}</td>
                <td><img src="{{ gift.giftPictureUrl }}" alt="{{ gift.giftName }}" class="vignette_produit" ></td>
                <td>{{ gift.giftDescription }}</td>
                <td>{{ gift.giftPrice }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('gift_show', { 'id': gift.id }) }}">Voir plus</a>
                        </li>
                        <li>
                            <a href="{{ path('gift_edit', { 'id': gift.id }) }}">Modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('gift_new') }}">Ajouter un cadeau à la liste pour Florian</a>
        </li>
    </ul>
{% endblock %}
