{% extends 'base.html.twig' %}

{% block body %}
    <h1>Kid</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ kid.id }}</td>
            </tr>
            <tr>
                <th>Kidname</th>
                <td>{{ kid.kidName }}</td>
            </tr>
            <tr>
                <th>Kidemail</th>
                <td>{{ kid.kidEmail }}</td>
